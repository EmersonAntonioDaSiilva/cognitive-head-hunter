//- index.jade
extends ./layout.jade

block specificJS
	script(type='text/javascript', src='/js/demo.js')
	script(type='text/javascript', src='/js/personality.js')
	script(type='text/javascript', src='/js/textsummary.js')

block content
	//
		div.row
			div.col-lg-1.col-xs-12.text-center.chh_logo
				img(src='/images/logo2.png')
			div.col-lg-9.col-xs-0.text-center
			div.col-lg-2.col-xs-12.text-center
				img(src='/images/ibmpos_blue.jpg',style='padding-top:25px;')
	div.row#test.loading1(style='display:none;')
		div.col-lg-1.col-xs-12.text-center.chh_logo
			img(src='/images/logo2.png')
	div.row
		div.col-lg-12.col-md-6.col-xs-12
			div.modal-content.text-center(style='padding:10px;margin-top:10px;margin-bottom:10px;')
			
				h2 Import your LinkedIn profile 
				div.row(style='padding:10px;margin-top:10px;margin-bottom:10px;')
					div#loading.row.col-lg-12.col-xs-12.text-center(style='display:none;')
						img(src='/images/watson.gif')
					div.row.col-lg-12.col-xs-12.text-center
						a.text-center(href='/auth')
							img(src='/images/Sign-In-Large---Default.png')
							
				h2 Or input your profile text below: 
				div.row(style='padding:10px;margin-top:10px;margin-bottom:10px;')
					div#loading.row.col-lg-12.col-xs-12.text-center(style='display:none;')
						img(src='/images/watson.gif')
					div.row.col-lg-12.col-xs-12
						div.row.col-lg-12.col-xs-12
							div
								textarea.content.form-control(rows='10', required='true',
									placeholder='Please enter the text to analyze (minimum of 250 words)...')
								div.text-right
									span.wordsCount.small
						div.row
							div.col-lg-4.col-lg-push-4.col-xs-4
								button.btn.btn-block.clear-btn(type='button') Clear
							div.col-lg-4.col-lg-push-4.col-xs-4.col-xs-push-4
								button#btn-analyzeText.btn.btn-block(type='button') Analyze
					div.col-lg-6.col-md-6.col-xs-12
					div.row
						div.form-group.row.loading1.text-center(style='display:none;')
							h2 &nbsp;
							img(src='/images/watson.gif')
						div.form-group.row.error(style='display: none;')
							h2 &nbsp;
							div.well
								p.errorMsg
