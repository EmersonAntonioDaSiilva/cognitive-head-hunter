//- index.jade
extends ./layout.jade

block content
	div.row
		div.col-lg-1.col-xs-12.text-center
			img(src='/images/logo.png',style='width: 200px;')
		div.col-lg-9.col-xs-0.text-center
		div.col-lg-2.col-xs-12.text-center
			img(src='/images/ibmpos_blue.jpg',style='padding-top:40px;')
	div.row
		div.col-lg-12.col-md-6.col-xs-12
			div.well
				div.row
					div.col-lg-3.col-xs-12.text-center(style='padding-top:40px;')
						img(src='#{user.pictureUrl}')
						h2 #{user.fullName}
						p #{user.headline}
					div#loading.row.loading.row.col-lg-9.col-xs-12.text-center(style='display:none;')
						h2 &nbsp;
						img(src='images/watson.gif')
					div.col-lg-9.col-xs-12.personality(style='display:none;')
						h3(style='height: 29px;') Your Personality*
						div.summary-div
						div.text-right(style='color: gray')
						em.small *Compared to most people who participated in our surveys.
					div.row.col-lg-9.col-xs-12#summary
						div.row.col-lg-12.col-xs-12
							div
								textarea.content.form-control(rows='10', required='true',
									placeholder='Please enter the text to analyze (minimum of 100 words)...')
									|#{JSON.stringify(user.data)}
								div.text-right
									span.wordsCount.small
						div.row
							div.col-lg-4.col-lg-push-4.col-xs-4
								button.btn.btn-block.clear-btn(type='button') Clear
							div.col-lg-4.col-lg-push-4.col-xs-4.col-xs-push-4
								button.btn.btn-block.analysis-btn(type='button') Analyze
		div.col-lg-6.col-md-6.col-xs-12
			div.row
				div.form-group.row.loading1.text-center(style='display:none;')
					h2 &nbsp;
					img(src='images/watson.gif')
				div.form-group.row.error(style='display: none;')
					h2 &nbsp;
					div.well
						p.errorMsg

	div.row
		div#concepts.col-lg-6.col-md-5.col-xs-12(style='display: none;')
			h3(style='height: 29px;') Your top concepts
			div.well.content
		div#positions.col-lg-6.col-xs-12.col-md-7(style='display: none;min-height:200px;')
			h3 Suggested positions
			div.form-group.row.loading.text-center(style='display:none;')
				h2 &nbsp;
				img(src='images/watson.gif')
			div.well.content

	div.results(style='display: none;')
		div.row
			div.col-lg-7.col-xs-12.col-md-7
				h3 Visualization of Personality Data
				div.well#vizcontainer
			div.col-lg-5.col-md-5.col-xs-12
				h3 Data Behind Your Personality
				div.col540px.well.traits(style='display: none;')

	//- templates to avoid to create HTML in javascript
	div.hidden
		div#header-template
			div.row.theader
				.col-lg-5.col-xs-5
					span Name
				.col-lg-7.col-xs-7.text-right
					span Value Â± Sampling Error

		div#trait-template
			div.row
				.tname.col-lg-7.col-xs-7
					span
				.tvalue.col-lg-5.col-xs-5.text-right
					span

		div#model-template
			div.row
				.col-lg-12.col-xs-12.text-center
					span
		div#raw #{JSON.stringify(user)}