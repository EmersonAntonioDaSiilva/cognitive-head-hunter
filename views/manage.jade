//- index.jade
extends ./layout.jade

block specificJS
	script(type='text/javascript', src='/js/manage.js')
	
block content
	div.row
		div.col-lg-12.message#error(style='display:none;')
			p.bg-danger#errorMsg
		div.col-lg-12.message#success(style='display:none;')
			p.bg-success#successMsg

		div.col-lg-6#candidates
			h2 Candidates
				button.btn.pull-right#candidate-new-btn(type='button') New

			div.well#candidate-add-form(style='display:none;')
				form(role="form")
					div.form-group.row
						div.col-lg-12.col-xs-12
							input#name.form-control(type="text", required='true', placeholder='Name')
					div.form-group.row
						div.col-lg-12.col-xs-12
							textarea#profile.form-control(rows='15', required='true', placeholder='Profile description (min 200 words)')
					div.form-group.row
						div.col-lg-3.col-lg-push-3.col-xs-3
							button.btn.btn-block#candidate-cancel-btn(type='button') Cancel
						div.col-lg-3.col-lg-push-3.col-xs-3
							button.btn.btn-block#candidate-clear-btn(type='reset') Clear
						div.col-lg-3.col-lg-push-3.col-xs-3.col-xs-push-3
							button.btn.btn-block#candidate-add-btn(type='button') Add

			div.row.text-center#candidates-loading(style='display:none;')
				h2 &nbsp;
				img(src='../images/watson.gif')

			h3#num-candidates
			div.well
				ul#candidates-list

		div.col-lg-6#jobs
			h2 Job positions
				button.btn.pull-right#job-new-btn(type='button') New

			div.well#job-add-div(style='display:none;')
				form(role="form",action="javascript:submitJob();")
					div.form-group.row
						div.col-lg-12.col-xs-12
							input#code.form-control(type="text", required='true', placeholder='Position code (like GBS-0730663)')
					div.form-group.row
						div.col-lg-12.col-xs-12
							input#title.form-control(type="text", required='true', placeholder='Position tile (like Technical Support Representative)')
					div.form-group.row
						div.col-lg-12.col-xs-12
							textarea#description.form-control(rows='15', required='true', placeholder='Description text')
					div.form-group.row
						div.col-lg-3.col-lg-push-3.col-xs-3
							button.btn.btn-block#job-cancel-btn(type='button') Cancel
						div.col-lg-3.col-lg-push-3.col-xs-3
							button.btn.btn-block#job-clear-btn(type='reset') Clear
						div.col-lg-3.col-lg-push-3.col-xs-3.col-xs-push-3
							button.btn.btn-block#job-add-btn(type='submit') Add
			div.well#job-required-form(style='display:none;')
				h3 New job: 
					span#job-code
					span.hidden#job-id
				h4 Choose the required concepts.
				div.row.text-center#jobs-required-loading(style='display:none;')
					p Extracting concepts... wait!
					img(src='../images/watson.gif')
				form(role="form",action="javascript:alert(true);")
					div.form-group.row
						div.col-lg-12.col-xs-12
							div.row
								div.col-lg-1
									input#job-id(type="checkbox",value="Bike")
									//input#code.form-control(type="text", required='true', placeholder='Position code (like GBS-0730663)')
								div.col-lg-11
									label(for='job-id') Concept name
					//div.form-group.row
					//	div.col-lg-12.col-xs-12
					//		input#title.form-control(type="text", required='true', placeholder='Position tile (like Technical Support Representative)')
					//div.form-group.row
					//	div.col-lg-12.col-xs-12
					//		textarea#description.form-control(rows='15', required='true', placeholder='Description text')
					div.form-group.row
						div.col-lg-3.col-lg-push-3.col-xs-3.col-xs-push-3
							button.btn.btn-block#job-add-btn(type='submit') Complete

			div.row.text-center#jobs-loading(style='display:none;')
				h2 &nbsp;
				img(src='../images/watson.gif')
			
			h3#num-jobs
			div.well
				ul#jobs-list
					